@model IEnumerable<PeniaBermeja.Models.EnlaceMejorado>

@{
    ViewBag.Title = "Index Menu2";
    Layout = null;
}

<div class="row">
    <div class="card">
        <div class="card-block" style="padding-bottom: 50px;">
            <h5>Logo</h5>
            <hr />
            @using (Html.BeginForm("EditarLogo", "Menu2", FormMethod.Post, htmlAttributes: new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="form-group col-md-12">
                    <h5>Enlace Logo</h5>
                    <hr />
                    

                    <input type="hidden" name="IdLogo" value="@Model.First().enlaceMejoradoId" />

                    <fieldset class="form-group col-md-3">
                        <label class="control-label">Nombre</label>
                        <input type="text" name="TextoEnlace" value="@Model.First().enlace.texto" class="form-control col-md-4">
                        @Html.ValidationMessage(@Model.First().enlace.texto)
                    </fieldset>
                    <fieldset class="form-group col-md-3">
                        <label class="control-label">Acción</label>
                        <input type="text" name="AccionEnlace" value="@Model.First().enlace.accion" class="form-control col-md-4">
                        @Html.ValidationMessage(@Model.First().enlace.accion)
                    </fieldset>
                    <fieldset class="form-group col-md-3">
                        <label class="control-label">Controlador</label>
                        <input type="text" name="ControladorEnlace" value="@Model.First().enlace.controlador" class="form-control col-md-4">
                        @Html.ValidationMessage(@Model.First().enlace.controlador)
                    </fieldset>
                </div>

                <div class="form-group col-md-12">
                    <h5>Imagen Logo</h5>
                    <hr />

                    <fieldset class="form-group col-md-3">

                        <img src="@ViewBag.logo.imagenPath()" alt="Sample Image" style="position:absolute;width:125px;height:80px;cursor:pointer " />
                        <input type="file" name="files[0]" id="fileUpload" style="opacity:0.0;width:125px;height:80px;overflow:hidden;position:absolute;cursor:pointer" />

                    </fieldset>

                </div>

                <div class="clearfix"></div>

                <div class="text-right">
                    <button type="submit" class="btn btn-success">
                        <i class="material-icons btn__icon--left">create</i> Guardar
                    </button>
                </div>
            }
        </div>
    </div>
</div>